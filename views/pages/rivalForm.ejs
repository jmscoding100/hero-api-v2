<%- include('../partials/header') %>

<main class="main" id="rivalForm">
    <div class="container">
        <form action="http://localhost:3000/api/hero/rival-post/<%= heroId %>" class="form" id="rivalForm" method="post">
            <div class="form-checks row row-cols-3 row-cols-md-5 g-4">
                <% rivals.forEach(rival => {%>
                    <div class="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input"  name="rival_id[]" value="<%= rival.hero_id %>" id="hero <%= rival.hero %>" />
                            <label for="hero<%= rival.hero_id%>" class="form-check-label"> 
                                <% if (rival.hero_name == null){%>
                                    <%= rival.first_name %> <%= rival.last_name %>
                                <%} else { %>
                                    <%= rival.hero_name %>
                                <%}%>
                            </label>
                        </div>
                    </div>

                <%})%>
            </div>
            <button type="submit" role="button" class="btn btn-primary">Add Rivals</button>
        </form>
    </div>
</main>


<%- include('../partials/footer') %>